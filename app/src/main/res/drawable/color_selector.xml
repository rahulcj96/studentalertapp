<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colourOnPressed1"
                android:endColor="@color/colourOnPressed2"
                android:angle="270" />

            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/coloronFocussed1"
                android:startColor="@color/coloronFocussed2"
                android:angle="270" />

            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/defaultColor1"
                android:startColor="@color/defaultColor2"
                android:angle="270" />

            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector>